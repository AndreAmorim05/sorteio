        name: 'basico'
    RetornoUnico:
        name: 'Retorno Unico'

    RetornoDuplo:
        name: 'Retorno Duplo'








<Botao@ButtonBehavior+Label>:
    canvas.before:
        Color:
            rgba: .3,.3,.3,1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: 40,40,40,40


<PopSair>:
    auto_dismiss: True
    size_hint: .5,.3
    title: 'Voltar'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Deseja salvar?'
        BoxLayout:
            Button:
                text: 'Sim'
                on_release: root.dismiss()
            Button:
                text: 'Nao'
                on_release: root.sem_salvar(); root.dismiss()
