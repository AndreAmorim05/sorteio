<RetornoDuplo>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: get_color_from_hex('474747')
            RoundedRectangle:
                radius: 5,5,5,5
                size: self.size
                pos: self.pos
        Button:
            size_hint: .1,.1
            pos_hint: {'top': 1, 'right': 1}
            text: 'Voltar'
            # on_release: Factory.PopSair().open()
            on_release: root.manager.current = 'telaincial'
        BoxLayout:
            size_hint: .6, .7
            spacing: dp(10)
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'center_y': .45}
            BoxLayout:
                padding: dp(7)
                size_hint_y: None
                height: dp(50)
                TextInput:
                    id: ficha_duplo1
                    hint_text: 'Adicione uma ficha'
                    multiline: False
                    on_text_validate: self.hint_text = 'Adicione outra ficha'; root.adicionar(self.text); self.text = ''
                    text_validate_unfocus: False
                    background_active: 'data/textinput_active.png'
                    background_normal: 'data/textinput_border_dual.png'
                    border: 10,10,10,10
                Button:
                    # id: botao1
                    text: 'Inserir'
                    size_hint: .2, 1
                    on_release: ficha_duplo1.hint_text = 'Adicione outra ficha'; root.adicionar(ficha_duplo1.text); ficha_duplo1.text = ''; ficha_duplo1.focus = True
            BoxLayout:
                padding: dp(7)
                size_hint_y: None
                height: dp(50)
                TextInput:
                    id: ficha_duplo2
                    hint_text: 'Adicione uma ficha'
                    multiline: False
                    on_text_validate: self.hint_text = 'Adicione outra ficha'; root.adicionar2(self.text); self.text = ''
                    text_validate_unfocus: False
                    background_active: 'data/textinput_active.png'
                    background_normal: 'data/textinput_border_dual.png'
                    border: 10,10,10,10
                Button:
                    text: 'Inserir'
                    size_hint: .2, 1
                    on_release: ficha_duplo2.hint_text = 'Adicione outra ficha'; root.adicionar2(ficha_duplo2.text); ficha_duplo2.text = ''; ficha_duplo2.focus = True

            BoxLayout:
                ScrollView:
                    BoxLayout:
                        orientation: 'vertical'
                        id: sroll_duplo1
                        size_hint_y: None
                        height: self.minimum_height
                ScrollView:
                    BoxLayout:
                        orientation: 'vertical'
                        id: scroll_duplo2
                        size_hint_y: None
                        height: self.minimum_height

            ButtonStyle:
                size_hint: .2, .2
                text: 'Sortear'
                on_release: root.sortear()
                source_image: 'data/reload_alterado.png'
                # todo: Popups só são inicializados assim! Factory.PopSalvar().open()

